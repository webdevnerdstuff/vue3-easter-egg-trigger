{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": false,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"lib": [
			"ESNext",
			"DOM"
		],
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"./src/*"
			]
		},
		"skipLibCheck": true,
		"noEmit": true
	},
	"types": [
		"lodash",
		"node"
	],
	"include": [
		"src/**/*",
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue"
	],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}
